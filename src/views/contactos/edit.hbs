<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/contactos/edit/{{contacto.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{contacto.nombre}}" class="form-control" name="nombre" placeholder="Nombre" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="email" value="{{contacto.correo}}" class="form-control" name="correo" placeholder="micorreo@correo.com">
                        </div>     
                        <div class="form-group">
                            <input type="phone" value="{{contacto.telefono}}" class="form-control" name="telefono" placeholder="Tel: 6182654876">
                        </div>       
                        <div class="form-group">
                            <textarea name="mensaje" rows="4" class="form-control" placeholder="Escribe tu mensaje">{{contacto.mensaje}}"</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Env√≠ar</button>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>